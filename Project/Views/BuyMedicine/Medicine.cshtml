@{
    Layout = "_Layout";
}
@using Project.Models
<body>
    <div class="container-fluid py-5">
        <div class="container">
          
            <div class="row g-5">
                @foreach (var lab in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="service-item bg-light rounded d-flex flex-column align-items-center justify-content-center text-center">
                           
                               <h3 class="mb-3">@lab.Name</h3>
                            <p class="m-0">Price: @lab.Price</p>
                            <p class="m-0">Quantity: @lab.Quantity</p>
                            <p class="m-0">Diagnosis: @lab.Diagnosis</p>
                          @*  <a class="btn btn-lg btn-primary rounded-pill" href="">
                                <i class="bi bi-arrow-right"></i>
                            </a>*@
                            <form method="post" action="/BuyMedicine/AddToCart">
                                <input type="hidden" name="itemId" value="@lab.Id" />
                               
                                <button type="submit" class="btn btn-lg btn-primary rounded-pill mt-3">Add to Cart</button>
                            </form>
                           
                        </div>
                      
                    </div>
                }
            </div>
             <div class="text-center mx-auto mb-5" style="max-width: 500px;">
                <button type="button">
                    <a href="/BuyMedicine/CheckoutList">Submit</a>
                </button>
            </div>
        </div>
    </div>
</body>
